% Color definitions
\definecolor{osu_black}{HTML}{000000}
\definecolor{osu_orange}{HTML}{D73F09}
\definecolor{osu_midorange}{HTML}{D35400}
\definecolor{osu_lightorange}{HTML}{E59866}
\definecolor{osu_red}{HTML}{C0392B}
\definecolor{osu_lightred}{HTML}{D98880}
\definecolor{osu_green}{HTML}{4A773C}
\definecolor{osu_lightgreen}{HTML}{C4D6A4}


% Main palette
\setbeamercolor*{palette primary}{bg=osu_orange, fg=white}
\setbeamercolor*{palette secondary}{bg=osu_black, fg=white}

% block environment
\setbeamercolor{block title}{bg=osu_orange, fg=black}
\setbeamercolor{block body}{bg=osu_lightorange, fg=black}

% alertblock environment
\setbeamercolor{block title alerted}{bg=osu_red, fg=black}
\setbeamercolor{block body alerted}{bg=osu_lightred, fg=black}

% example environment
\setbeamercolor{block title example}{bg=osu_green, fg=black}
\setbeamercolor{block body example}{bg=osu_lightgreen, fg=black}

% TOC sections
\setbeamercolor{section in toc}{fg=osu_orange}

% itemize, enumerate, etc
\setbeamercolor{structure}{fg=osu_orange}
